<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
"http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping>
    <class name="com.atguigu.hibernate.one2many2.Customer" table="HIBERNATE_CUSTOMERS">
        
        <id name="id" type="java.lang.Integer">
            <column name="ID" />
            <generator class="native" />
        </id>
        
        <property name="lastName" type="java.lang.String">
            <column name="LAST_NAME" />
        </property>
        
        <set name="orders" table="HIBERNATE_ORDERS" inverse="false" cascade="delete" order-by="ORDER_NUMBER DESC">
            <key>
                <column name="CUSTOMER_ID" />
            </key>
            <one-to-many class="com.atguigu.hibernate.one2many2.Order" />
        </set>
        
    </class>
</hibernate-mapping>
